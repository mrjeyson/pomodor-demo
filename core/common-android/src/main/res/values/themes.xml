<resources>

    <style name="Base.V23.Theme.Stopwatch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cornflower_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- App Background color -->
        <item name="android:colorBackground">@color/zircon</item>

        <!--Custom colors-->
        <item name="colorOnSecondaryContainer">@color/dusty_grey</item>
        <item name="colorOnPrimarySurface">@color/silver</item>
        <item name="colorAccent">@color/dove_grey</item>
        <item name="colorOnSurface">@color/mercury</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/mercury</item>
        <item name="colorSecondarySurface">?attr/colorSurface</item>
        <item name="colorOnSecondarySurface">@color/tundora</item>
        <item name="materialProgressbarTrackTint">@color/mercury</item>
        <item name="errorTextColor">@color/error_text_color</item>
        <item name="colorErrorContainer">@color/seashell</item>
        <item name="filledFavoriteIconTint">@color/cornflower_blue</item>
        <item name="colorDisabled">@color/baltic_sea</item>
        <item name="colorOnDisabled">@color/shark</item>
    </style>

    <style name="Base.Theme.Stopwatch" parent="Base.V23.Theme.Stopwatch" />

    <style name="Theme.Stopwatch" parent="Base.Theme.Stopwatch">
        <!-- Type styles -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Stopwatch.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Stopwatch.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Stopwatch.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Stopwatch.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Stopwatch.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Stopwatch.Headline6</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.AppCompat.Title</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Stopwatch.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Stopwatch.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Stopwatch.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Stopwatch.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Stopwatch.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.Stopwatch.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Stopwatch.Overline</item>

        <item name="bottomNavigationStyle">@style/Widget.Stopwatch.BottomNavigationView</item>
        <item name="fontFamily">@font/inter_500</item>
        <item name="materialButtonStyle">@style/Widget.Stopwatch.Button</item>
        <item name="materialTextButtonStyle">@style/Widget.Stopwatch.Button.TextButton</item>
        <item name="toolbarStyle">@style/Widget.Stopwatch.Toolbar</item>
    </style>

    <style name="Theme.Stopwatch.NoActionBar" parent="Theme.Stopwatch">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ThemeOverlay.Stopwatch.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary" />
</resources>
